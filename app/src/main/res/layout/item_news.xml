<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <TextView
        android:id="@+id/title_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="В Салехард приехали программисты"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/date_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="14 октября 2021"
        app:layout_constraintTop_toBottomOf="@+id/title_news"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="в Салехарде сейчас самые лучшие программисты в мире"
        app:layout_constraintTop_toBottomOf="@+id/date_news"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>