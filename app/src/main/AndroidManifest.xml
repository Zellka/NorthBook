<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.northbook" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NorthBook" >
        <activity
            android:name=".ui.book.AddReviewActivity"
            android:exported="true"
            android:label="@string/title_activity_add_review" />
        <activity
            android:name=".ui.book.BookActivity"
            android:exported="true"
            android:label="@string/title_activity_book" />
        <activity
            android:name=".ui.menu.MenuActivity"
            android:exported="true"
            android:label="@string/title_activity_menu" />
        <activity
            android:name=".MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>